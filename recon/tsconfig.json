{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["./app/*"],
      "@_store/*": ["./app/store/*"],
      "@_components/*": ["./app/_components/*"],
      "@_translation/*": ["./app/translation/*"],
      "@_layout/*": ["./app/_layout/*"],
      "@_utils/*": ["./app/_utils/*"],
      "@_shared/*": ["./app/_shared/*"],
      "@_pages/*": ["./app/pages/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
